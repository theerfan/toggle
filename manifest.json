{
    "manifest_version": 2,
    "name": "Proxy Toggle",
    "version": "1.0",
    "description": "Toggle proxy settings between no proxy and manual configuration",
    "permissions": ["proxy", "storage", "privacy", "notifications"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-white.png",
        "48": "icons/icon-white.png",
        "128": "icons/icon-white.png"
      }
    },
    "browser_specific_settings": {
      "gecko": {
        "strict_min_version": "91.1.0"
      }
    },
    "icons": {
      "16": "icons/icon-white.png",
      "48": "icons/icon-white.png",
      "128": "icons/icon-white.png"
    }
  }
  